{
  "name": "tintin-formatter",
  "displayName": "TinTin++ code formatter and highlighter",
  "description": "VS Code extension for TinTin++ (.tin) files with formatting and syntax highlighting support.",
  "version": "1.1.1",
  "publisher": "Gaohei",
  "icon": "icon.png",
  "keywords": [
    "tintin",
    "tintin++",
    "formatter",
    "highlighter",
    "mud",
    "script"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:tin",
    "onCommand:extension.formatTin"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tin",
        "extensions": [
          ".tin"
        ],
        "aliases": [
          "TinTin++"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tin",
        "scopeName": "source.tintin",
        "path": "./syntaxes/tintin.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "extension.formatTin",
        "title": "Format TinTin++ File"
      }
    ],
    "keybindings": [
      {
        "command": "extension.formatTin",
        "key": "ctrl+alt+l",
        "when": "editorTextFocus && editorLangId == 'tin'"
      }
    ],
    "configurationDefaults": {
      "[tin]": {
        "editor.defaultFormatter": "Gaohei.tintin-formatter"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GaoheiX/vscode-tintin-formatter"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "typescript": "^4.4.3",
    "vscode": "^1.1.37"
  }
}